        // Modal functions
        function openFormationModal(formationKey) {
            const formation = formations[formationKey];
            if (!formation) return;

            const detailsHTML = `
                <div class="modal-header">
                    <span style="font-size: 3.5rem; display: block; margin-bottom: 1rem;">${formation.icon}</span>
                    <h3>${formation.title}</h3>
                    <div style="display: flex; gap: 1rem; margin-top: 1rem; flex-wrap: wrap;">
                        <span style="background: rgba(0, 217, 255, 0.2); padding: 0.5rem 1rem; border-radius: 20px; color: var(--primary); font-weight: 600;">${formation.level}</span>
                        <span style="background: rgba(255, 61, 113, 0.2); padding: 0.5rem 1rem; border-radius: 20px; color: var(--secondary); font-weight: 600;">${formation.duration}</span>
                        <span style="background: rgba(255, 214, 0, 0.2); padding: 0.5rem 1rem; border-radius: 20px; color: var(--accent); font-weight: 600;">${formation.rythme}</span>
                    </div>
                </div>

                <div style="margin: 2rem 0;">
                    <p style="font-size: 1.1rem; color: var(--gray); line-height: 1.8;">${formation.description}</p>
                </div>

                <div style="margin: 2rem 0;">
                    <h4 style="color: var(--primary); font-family: 'Archivo Black', sans-serif; margin-bottom: 1rem;">üéØ Comp√©tences d√©velopp√©es</h4>
                    <ul style="list-style: none; padding: 0;">
                        ${formation.competences.map(comp => `
                            <li style="padding: 0.5rem 0; color: var(--light); display: flex; align-items: center; gap: 0.5rem;">
                                <span style="color: var(--primary);">‚úì</span> ${comp}
                            </li>
                        `).join('')}
                    </ul>
                </div>

                <div style="margin: 2rem 0;">
                    <h4 style="color: var(--primary); font-family: 'Archivo Black', sans-serif; margin-bottom: 1rem;">üíº D√©bouch√©s</h4>
                    <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                        ${formation.debouches.map(metier => `
                            <span style="background: rgba(0, 217, 255, 0.1); padding: 0.5rem 1rem; border-radius: 10px; color: var(--light); border: 1px solid rgba(0, 217, 255, 0.3);">${metier}</span>
                        `).join('')}
                    </div>
                </div>

                <div style="background: linear-gradient(135deg, rgba(0, 217, 255, 0.1), rgba(255, 61, 113, 0.1)); padding: 1.5rem; border-radius: 15px; margin: 2rem 0;">
                    <h4 style="color: var(--primary); font-family: 'Archivo Black', sans-serif; margin-bottom: 0.5rem;">üí∞ Salaire en sortie</h4>
                    <p style="font-size: 1.5rem; font-weight: 700; color: var(--light); margin: 0;">${formation.salaire}</p>
                </div>

                <button onclick="closeModal('formationModal'); openModal('candidatureModal');" class="submit-button">
                    Je candidate pour cette formation üöÄ
                </button>
            `;

            document.getElementById('formationDetails').innerHTML = detailsHTML;
            openModal('formationModal');
        }

        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
            document.body.style.overflow = 'auto';
            // Reset forms
            if (modalId === 'candidatureModal') {
                document.getElementById('formContent').style.display = 'block';
                document.getElementById('successMessage').classList.remove('active');
                document.getElementById('candidatureForm').reset();
            } else if (modalId === 'brochureModal') {
                document.getElementById('brochureFormContent').style.display = 'block';
                document.getElementById('brochureSuccessMessage').classList.remove('active');
                document.getElementById('brochureForm').reset();
            }
        }

        function submitForm(event, type) {
            event.preventDefault();
            
            // Simulate form submission
            if (type === 'candidature') {
                document.getElementById('formContent').style.display = 'none';
                document.getElementById('successMessage').classList.add('active');
            } else if (type === 'brochure') {
                document.getElementById('brochureFormContent').style.display = 'none';
                document.getElementById('brochureSuccessMessage').classList.add('active');
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                const modalId = event.target.id;
                closeModal(modalId);
            }
        }

        // Scroll reveal animation
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.scroll-reveal').forEach((element) => {
            observer.observe(element);
        });

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                
                // Check if it's a modal trigger
                if (href === '#contact') {
                    e.preventDefault();
                    openModal('candidatureModal');
                    return;
                }
                
                const target = document.querySelector(href);
                if (target) {
                    e.preventDefault();
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
